apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: react-ui-hpa
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: react-ui-deployment
  minReplicas: 1 # Minimum pods ki sankhya
  maxReplicas: 5 # Maximum pods ki sankhya
  metrics:
  - type: Resource
    resource:
      name: cpu
      target:
        type: Utilization
        averageUtilization: 80 # CPU utilization 80% se upar hone par scale karega
        
